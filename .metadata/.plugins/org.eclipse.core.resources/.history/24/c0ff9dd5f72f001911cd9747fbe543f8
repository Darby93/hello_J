public class Lotto {
	private Scanner scanner; //부품
	private Random r; //부품
	private int [] numbers;
	                  //static{} , {} 초기자
	public Lotto() { //특수한 목적 : member field 초기화 : (생성자 함수), constructor
		scanner = new Scanner(System.in); //초기화 (참조 변수는 주소값을 갖는 것) 
		r = new Random();
		numbers = new int[6];
	}
	
	//기능을 구현하세요
	//
	
	//r.nextInt(45)+1    >>   1~45
	
//	public void SelectLottoNumber() {
		public int displayMenu() {
			System.out.println("*******************");
			System.out.println("*******로또*******");
			System.out.println("1. 학생성적 입력하기 ");
			System.out.println();
			System.out.println("2. 학생성적 삭제하기 ");
			System.out.println();
			System.out.println("3. 학생석적 이름순 정렬하기");
			System.out.println();
			System.out.println("4. 프로그램 종료");
			System.out.println();
			
			int menu = 0;
			
			do {
				System.out.println("메뉴(1~4번) 선택");
				
				menu = Integer.parseInt(scanner.nextLine());
			}while(true);
			return menu;
		}
	
		
	
	
	
	
	
	
	
	
