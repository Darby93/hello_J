package kr.or.bit;

import java.util.Random;
import java.util.Scanner;

public class Lotto2 {
	private int [] numbers2;
	private Scanner sc;
	private Random r;
	private int num;
	
	public Lotto2() {
		sc = new Scanner(System.in);
		r = new Random();
		numbers2 = new int [6];
		num = r.nextInt(45)+1;
	}
	
	
	public void numberArray() {
		 numbers2[0] = num;
//		 System.out.println(numbers2[0]);
//		 numbers2[1] = numbers2[0] + 1;
