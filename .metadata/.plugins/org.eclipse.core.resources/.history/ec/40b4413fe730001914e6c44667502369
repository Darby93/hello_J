package mo;

import java.util.Scanner;

public class MC {
	
	Scanner sc = new Scanner(System.in);
	String[][] seatArr = new String[3][3];
	
	private void seat() {
		
	}
	
	private int menu() {
		
		
		System.out.println("○○○○ 영화예매 ○○○○○");
		System.out.println("○○○○○○○○○○○○○○○○");
		System.out.println("○○ 1. 자리 예매   ○○");
		System.out.println("○○ 2. 내 자리 확인○○");
		System.out.println("○○ 3. 빈 자리 확인○○");
		System.out.println("○○ 4. 자리 변경   ○○");
		System.out.println("○○ 5. 종료        ○○");
		System.out.println("○○○○○○○○○○○○○○○○");

		System.out.println("\n번호를 입력하세요");
		
		int number = Integer.parseInt(sc.nextLine());
		return number;
	}
	
	private void res() {
		System.out.println("\n[A1][A2][A3]"
				         + "\n[B1][B2][B3]"
				         + "\n[C1][C2][C3]");

		System.out.println("\n좌석을 고르세요\n");
	}
	
	private void mySeat() {
		System.out.println("내 자리");
	}
	
	private void emptySeat() {
		System.out.println("빈 자리 확인");
	}
	
	private void changeSeat() {
		System.out.println("자리변경");
	}
	
	private void end() {
		System.out.println("종료");
	}
	
	public void displayMenu() {
a:		while(true) {
			switch(menu()){
			case 1 : res();
				break;
				
			case 2 : mySeat();
				break;
			
			case 3 : emptySeat();
				break;
			
			case 4 : changeSeat();
				break;
			
			case 5 : end();
				break a;
			}
		}
			
		
	}
	
	
	
	
	
}
