
public class Ex08_Static_Method {
	
	int iv = 100;
	static int cv = 200;
	
	void method() {
		System.out.println("나 일반함수");
	}
	
	static void smethod() {
		System.out.println("나 공유자원이야(static 함수)");
	}
	
	
	public static void main(String[] args) {
		Ex08_Static_Method ex = new Ex08_Static_Method();
		System.out.println(ex.iv);
		ex.method();
		
		Ex08_Static_Method.smethod();
		
		System.out.println();
		
		/*
		 * out이 static 함수 
		 * public static object out(){ 
		 * return new obj(); 
		 * }
		 */
		
		//static 함수는 사용 목적 : 
		//static 함수를 만든 이유 ?
		//목적 : 많이 쓰는 자원을 편하게 사용
		//여러분이 설계도를 만들때 많이 쓰는 자원은 static 설계
		
		
	}

}
